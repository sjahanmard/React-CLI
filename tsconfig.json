  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react"
  },
  "lib": ["es2015"],
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.txt"],
  "path": {
    "templates": ["src/templates"]
  }
}
